<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="580px"
            android:layout_height="130px"
            android:layout_gravity="center"
            android:layout_marginLeft="350px"
            android:layout_marginTop="55px"
            android:text="서로 알아가기"
            android:textColor="#464444"
            android:textSize="70px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginTop="80px"
            app:srcCompat="@drawable/menu" />

    </LinearLayout>




    <Button
        android:id="@+id/button8"
        android:layout_width="1000px"
        android:layout_height="120px"
        android:layout_gravity="center"
        android:layout_marginTop="50px"
        android:background="@drawable/rectangle_4"
        android:backgroundTint="#8F78FF"
        android:text="Q1. 자신의 학창시절 취미는 무엇이였나요?"
        android:textColor="#ffffff"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="338dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        app:srcCompat="@drawable/image_3" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="326dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:paddingStart="10dp"
        android:background="@drawable/rectangle_5"
        android:elevation="17.85dp"
        android:hint="입력하세요 "/>

    <Button
        android:id="@+id/btninput"
        android:layout_marginTop="30px"
        android:layout_width="650px"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:text="입력 완료"
        android:textColor="@color/white"

        android:background="@drawable/image_button" />
</LinearLayout>